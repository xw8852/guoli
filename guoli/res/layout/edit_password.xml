<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:background="@drawable/shape_round_rect_grey" >

        <TextView
            android:id="@+id/oldPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/large_margin"
            android:paddingLeft="@dimen/large_margin"
            android:paddingTop="@dimen/large_margin"
            android:text="旧 密 码  ："
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/inputOldPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/oldPassword"
            android:background="@android:color/transparent"
            android:hint="请输入旧密码"
            android:inputType="textPassword"
            android:paddingTop="@dimen/large_margin"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/oldPassword"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/divider" />

        <TextView
            android:id="@+id/newPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:paddingBottom="@dimen/large_margin"
            android:paddingLeft="@dimen/large_margin"
            android:paddingTop="@dimen/large_margin"
            android:text="新 密 码  ："
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/inputNewPassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/inputOldPassword"
            android:layout_below="@+id/line1"
            android:background="@android:color/transparent"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingTop="@dimen/large_margin"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <View
            android:id="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/newPassword"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/divider" />

        <TextView
            android:id="@+id/surePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:paddingBottom="@dimen/large_margin"
            android:paddingLeft="@dimen/large_margin"
            android:paddingTop="@dimen/large_margin"
            android:text="确认密码："
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/inputSurePassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/inputOldPassword"
            android:layout_below="@+id/line2"
            android:background="@android:color/transparent"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:paddingTop="@dimen/large_margin"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </RelativeLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:text="确认修改"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>