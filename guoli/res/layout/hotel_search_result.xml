<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="@drawable/shape_title_bar" >

        <!-- 标题内容 -->

        <TextView
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_top_return_on"
            android:gravity="center"
            android:text="@string/back_btn"
            android:textColor="@color/title_bar_font_color" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/search_hotel_title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/title_bar_font_color" />
        <!-- 电话按钮 -->

        <TextView
            android:id="@+id/map_mode_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_top_return_on"
            android:gravity="center"
            android:text="@string/map_mode"
            android:textColor="@color/title_bar_font_color" />
    </RelativeLayout>

    <!-- 搜索条件及结果布局 -->
    <RelativeLayout
        android:id="@+id/condition_and_result_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/title_bar" >

        <!-- 城市 -->
        <TextView
            android:id="@+id/city_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/city_text"
            android:layout_toLeftOf="@+id/count_view"
            android:baselineAligned="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/occupancy" />

                <!-- 入住日期 -->
                <TextView
                    android:id="@+id/occupancy_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/leave" />
                <!-- 离开日期 -->
                <TextView
                    android:id="@+id/leave_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <!-- 商家数 -->
        <TextView android:id="@+id/count_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:gravity="center"
            />
    </RelativeLayout>

    <!-- 排序过滤控件布局 -->
    <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_below="@+id/condition_and_result_layout"
         android:layout_width="match_parent"
        android:layout_height="40dp">
        <Spinner android:id="@+id/sort_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Spinner android:id="@+id/price_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Spinner android:id="@+id/area_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    
    <!-- 酒店列表 -->
    <ListView android:id="@+id/hotel_list"
        android:layout_below="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>